        <client_script><![CDATA[api.controller=function() {
  /* widget controller */
  var c = this;
	
	c.cities = [];
	c.cities_select = [];
	
	c.cities = JSON.parse(c.data.cities);
	c.cities_select = c.cities.cities;
	
	c.cities_select.sort(sort_by_name);
	
	function sort_by_name(a, b) {
		return a.name.localeCompare(b.name);
	}
};]]></client_script>
